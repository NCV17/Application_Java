<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="800.0" prefWidth="1550.0" style="-fx-background-color: #2980b9;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafx.controllers.WelcomeController">
    <children>
        <!-- Logo Khóa Học IT -->
        <Label layoutX="50" layoutY="50" style="-fx-font-size: 30px; -fx-text-fill: white; -fx-font-weight: bold;" text="KHÓA HỌC IT" />

        <!-- Form chứa nút đăng nhập và đăng ký -->
        <VBox alignment="CENTER" prefHeight="250" prefWidth="400" spacing="15" style="-fx-background-color: #ffffff; -fx-padding: 30px; -fx-border-radius: 15px; -fx-background-radius: 15px;                      -fx-border-color: #3498db; -fx-border-width: 2px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 5);" AnchorPane.bottomAnchor="100" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="100">
            <Label style="-fx-font-size: 22px; -fx-text-fill: #2c3e50; -fx-font-weight: bold;" text="Đăng nhập / Đăng ký" />

            <!-- Nút đăng nhập -->
            <Button fx:id="loginButton" onAction="#switchToLogin" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 16px;                            -fx-padding: 10px 20px; -fx-border-radius: 10px; -fx-background-radius: 10px;                            -fx-font-weight: bold;" text="🚀 Đăng nhập" />

            <!-- Nút đăng ký -->
            <Button fx:id="registerButton" onAction="#switchToRegister" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-size: 16px;                            -fx-padding: 10px 20px; -fx-border-radius: 10px; -fx-background-radius: 10px;                            -fx-font-weight: bold;" text="📝 Đăng ký" />
        </VBox>
    </children>
</AnchorPane>
