<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Label?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafx.controllers.RegisterController" prefWidth="450" prefHeight="370">
    <children>
        <GridPane alignment="CENTER" hgap="10" vgap="10" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="50" AnchorPane.bottomAnchor="50">
            <!-- Tên đăng nhập -->
            <Label text="Tên đăng nhập:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="txtUsername" prefWidth="220" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <!-- Mật khẩu -->
            <Label text="Mật khẩu:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <PasswordField fx:id="txtPassword" prefWidth="220" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <!-- Xác nhận mật khẩu -->
            <Label text="Xác nhận mật khẩu:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <PasswordField fx:id="txtConfirmPassword" prefWidth="220" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <!-- Email -->
            <Label text="Email:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="txtEmail" prefWidth="220" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <!-- Số điện thoại -->
            <Label text="Số điện thoại:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="txtPhone" prefWidth="220" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <!-- Nút Đăng ký -->
            <Button text="Đăng ký" prefWidth="100" onAction="#handleRegister" GridPane.rowIndex="5" GridPane.columnIndex="1" style="-fx-margin-top: 10px;"/>

            <!-- Thông báo lỗi -->
            <Label fx:id="messageLabel" text="" textFill="red" GridPane.rowIndex="6" GridPane.columnIndex="0" GridPane.columnSpan="2"/>

            <Button text="Đã có tài khoản? Đăng nhập ngay" onAction="#switchToLogin" style="-fx-background-color: transparent; -fx-text-fill: blue; -fx-underline: true;" GridPane.rowIndex="7" GridPane.columnIndex="1" GridPane.columnSpan="2"/>

        </GridPane>
    </children>
</AnchorPane>
