<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafx.controllers.WelcomeController" id="anchorPane">
    <children>
        <!-- VBox để căn giữa các phần tử -->
        <VBox alignment="CENTER" spacing="20" AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">
            <Label fx:id="welcomeLabel" text="Welcome khóa học IT" styleClass="welcome-label"/>
            <Button fx:id="loginButton" text="Đăng nhập" onAction="#switchToLogin" styleClass="button-style"/>
            <Button fx:id="registerButton" text="Đăng ký" onAction="#switchToRegister" styleClass="button-style"/>
        </VBox>
    </children>
</AnchorPane>
